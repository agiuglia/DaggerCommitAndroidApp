<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/commit_author"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"/>

    <RelativeLayout
        android:id="@+id/commit_hash_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commit_author"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/commit_hash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/commit_hash_title_text"
            />

        <TextView
            android:id="@+id/commit_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/commit_hash_title"
            android:textSize="12sp"
            android:textStyle="bold"
            />
    </RelativeLayout>



    <TextView
        android:id="@+id/commit_message"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_below="@+id/commit_hash_layout"/>

</RelativeLayout>